#Niha{
    display: none;
}

#Title{
    display: none;
}
.Title #Title{
    display: flex;
}
.Title #Footer{
    display: none;
}
.Title #Header{
    display: none;
}

.Limit #Time{
    color: red;
}
.Limit #Niha{
    color: red;
}
.Limit #NihaQ{
    color: red;
}
.Limit #Wo{
    color: red;
}

#Answers{
    display: none;
}
.Successful #Answers{
    display: flex;
}
.Successful #Niha{
    display: flex;
}
.Successful #NihaQ{
    display: none;
}

#Next{
    display: none;
}
.NextTarget #Next{
    display: flex;
}
.NextTarget #Footer{
    display: none;
}

#End{
    display: none;
    background-color: rgba(0, 0, 0, 0.75);
}
#HighScore{
    display: none;
}
#Score{
     color: rgb(255, 255, 255);
}
.GameOver #End{
    display: flex;
}
.HighScore #HighScore{
    display: flex;
}
.HighScore #End{
    background-color: rgba(0, 0, 0, 0);
}
.HighScore #GameOver{
    display: none;
}
.HighScore #Footer{
    display: none;
}
.HighScore #Header{
    display: none;
}
.HighScore #Score{
    color: rgb(0, 255, 0);
}